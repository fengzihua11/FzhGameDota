<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:gravity="center_horizontal">
	<ImageView android:id="@+id/shu" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:scaleType="fitXY" />

	<View android:layout_width="match_parent"
		android:layout_marginTop="10dip" android:layout_height="2dip"
		android:background="@color/green" />

	<LinearLayout android:layout_marginTop="10dip"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView android:id="@+id/charpter" android:layout_width="match_parent"
			android:layout_height="30dip" android:textColor="@color/green"
			android:textSize="18sp" />
		<TextView android:id="@+id/sy" android:layout_marginTop="10dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/music" />
	</LinearLayout>
</LinearLayout>